<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
    <name>mod_tz_multipurpose</name>
    <author>ThuongNVTemplaza</author>
    <authorEmail>support@templaza</authorEmail>
    <creationDate>April 2014</creationDate>
    <authorUrl>www.templaza.com</authorUrl>
	<authorEmail>support@templaza.com</authorEmail>
	<copyright>Copyright (C) 2012 TemPlaza. All rights reserved.</copyright>
	<license>GNU/GPL v2 or later http://www.gnu.org/licenses/gpl-2.0.html</license>
	<description>Module TZ Multipurpose</description>
	<version>1.0</version>
    <files>
        <filename module="mod_tz_multipurpose">mod_tz_multipurpose.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>admin</folder>
		<folder>images</folder>
		<folder>js</folder>
        <folder>css</folder>
        <folder>tmpl</folder>
    </files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.mod_tz_multipurpose.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_tz_multipurpose.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/modules/mod_tz_multipurpose/admin/formfields">
                <field name="tz_multi_stm" type="list" default="2" label="TZ_MULTIPURPOSE_OPTION_FIELD" description="">
                    <option value="0">TZ_MULTIPURPOSE_SHOW_TEXT</option>
                    <option value="1">TZ_MULTIPURPOSE_SHOW_IMAGE</option>
                    <option value="2">TZ_MULTIPURPOSE_SHOW_TI</option>
                </field>
                <field type="tzmultipurpose" name="multipurpose" label="">

                </field>
            </fieldset>

            <fieldset name="tz_multi_carousel" label="MOD_TZ_MULTIPURPOSE_CAROUSEL" addfieldpath="/modules/mod_tz_multipurpose/admin/formfields">

                <field name="showLinkImg_cr" type="radio"
                       class="btn-group" default="0"
                       label="MOD_TZ_MULTIPURPOSE_SHOW_LINK_IMG_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_SHOW_LINK_IMG_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field type="selectlink" name="link_img_cr" label="MOD_TZ_MULTIPURPOSE_SELECT_LINK_IMG">

                </field>

                <field name="autoPlay" type="radio"
                       class="btn-group" default="0"
                       label="MOD_TZ_MULTIPURPOSE_AUTO_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_AUTO_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="navigation" type="radio"
                       class="btn-group" default="0"
                       label="MOD_TZ_MULTIPURPOSE_NAVIGATION_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_NAVIGATION_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="stopOnHover" type="radio"
                       class="btn-group" default="0"
                       label="MOD_TZ_MULTIPURPOSE_STOP_ON_HOVER_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_STOP_ON_HOVER_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="singleItem" type="radio"
                       class="btn-group" default="0"
                       label="MOD_TZ_MULTIPURPOSE_SINGLE_ITEM_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_SINGLE_ITEM_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="itemsScaleUp" type="radio"
                       class="btn-group" default="0"
                       label="MOD_TZ_MULTIPURPOSE_ITEMS_SCALE_UP_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_ITEMS_SCALE_UP_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="rewindNav" type="radio"
                       class="btn-group" default="0"
                       label="MOD_TZ_MULTIPURPOSE_REWIND_NAV_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_REWIND_NAV_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="pagination" type="radio"
                       class="btn-group" default="0"
                       label="MOD_TZ_MULTIPURPOSE_PAGINATION_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_PAGINATION_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="paginationNumbers" type="radio"
                       class="btn-group" default="0"
                       label="MOD_TZ_MULTIPURPOSE_PAGINATION_NUMBERS_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_PAGINATION_NUMBERS_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="items" type="text"
                       default="5"
                       label="MOD_TZ_MULTIPURPOSE_ITEMS_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_ITEMS_DESC"/>
                <field name="slideSpeed" type="text"
                       default="200"
                       label="MOD_TZ_MULTIPURPOSE_SLIDE_SPEED_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_SLIDE_SPEED_DESC"/>
                <field name="paginationSpeed" type="text"
                       default="800"
                       label="MOD_TZ_MULTIPURPOSE_PAGINATION_SPEED_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_PAGINATION_SPEED_DESC"/>
                <field name="rewindSpeed" type="text"
                       default="1000"
                       label="MOD_TZ_MULTIPURPOSE_REWIND_SPEED_LABEL"
                       description="MOD_TZ_SERVICES_REWIND_SPEED_DESC"/>
            </fieldset>

            <fieldset name="tz_multi_flex" label="MOD_TZ_MULTIPURPOSE_FLEX" addfieldpath="/modules/mod_tz_multipurpose/admin/formfields">
                <field name="showLinkImg_flex" type="radio"
                       class="btn-group" default="0"
                       label="MOD_TZ_MULTIPURPOSE_SHOW_LINK_IMG_LABEL"
                       description="MOD_TZ_MULTIPURPOSE_SHOW_LINK_IMG_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field type="selectlink" name="link_img_flex" label="MOD_TZ_MULTIPURPOSE_SELECT_LINK_IMG">

                </field>

                <field type="selectfilegroup" name="flex_sgf" label="MOD_TZ_MULTIPURPOSE_SELECT_FIELD_GROUP">

                </field>
            </fieldset>

            <fieldset
                    name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="1">JGLOBAL_USE_GLOBAL</option>
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field
                        name="cachemode"
                        type="hidden"
                        default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>